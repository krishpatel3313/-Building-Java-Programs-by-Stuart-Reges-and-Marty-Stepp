1. public int quadrant() {
    if (x == 0 || y == 0) {
        return 0;
    } else if (x > 0) {
        if (y > 0) {
            return 1;
        } else {
            return 4;
        }
    } else { // x < 0
        if (y > 0) {
            return 2;
        } else {
            return 3;
        }
    }
}


2. public void flip() {
      int oldX = x;
      x = -y;
      y = -oldX;
  }
OR
// Using mutators
public void flip() {
    int oldX = getX();
    int oldY = getY();
    setLocation(-oldY, -oldX);
}


3. public int manhattanDistance(Point other) {
    int dx = Math.abs(this.x - other.x);
    int dy = Math.abs(this.y - other.y);
    return dx + dy;
}


4. public boolean isVertical(Point other) {
    if (other == null) {
        throw new IllegalArgumentException("other must not be null");
    }
    return this.x == other.x;
}


5. public double slope(Point other) {
    if (other == null) {
        throw new IllegalArgumentException("other is null");
    }
    int dx = other.x - this.x;
    if (dx == 0) {
        throw new IllegalArgumentException("slope undefined for vertical line");
    }
    int dy = other.y - this.y;
    return (double) dy / dx;
}


